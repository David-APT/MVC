@model Bizom.Models.Login

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <title>Login</title>
    <style>
        body {
            background-color: lightgrey;
        }
    </style>
</head>
<body>
 
    <div class="container w-50 text-center mt-5">
        <div class="master  bg-info bg-opacity-25 rounded-3 p-3 text-black  ">
            @Html.Raw(@TempData["Msg"])
            @using (@Html.BeginForm())
            {
                @Html.LabelFor(m => m.UserName, "USERNAME")
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control m-2", @placeholder = "UserName" })
                @Html.LabelFor(m => m.PassWord, "PASSWORD")
                @Html.TextBoxFor(m => m.PassWord, new { @class = "form-control m-2", @placeholder = "PassWord", @type = "password", @id = "pds" })
              
                <input type="checkbox" id="c" /><span>Show PassWord</span><br />
                @Html.LabelFor(m => m.Roles)
                @Html.DropDownListFor(m => m.Roles, new SelectList(Enum.GetValues(typeof(Bizom.Models.roles))), "SELECT")
                <button class="btn btn-success">Login</button>
            }
        </div>
    </div>
    <div class="container text-bg-danger">
        @Html.ValidationSummary(false)
    </div>
    <script>
        $(document).ready(function () {

            $("#c").click(function () {

                $("#pds").attr('type', $(this).is(':checked') ? "text" : "password");
            })
        });
    </script>
</body>
</html>
