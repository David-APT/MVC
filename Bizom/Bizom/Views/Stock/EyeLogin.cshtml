@model Bizom.Models.Login

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <title>Login</title>
    <style>
        body {
            background-color: lightgrey;
        }
    </style>
</head>
<body>

    <div class="container w-50 text-center mt-5">
        <div class="master  bg-info bg-opacity-25 rounded-3 p-3 text-black  ">
      
            @using (@Html.BeginForm())
            {
               
                @Html.LabelFor(m => m.DPassword, "PASSWORD")
                @Html.TextBoxFor(m => m.DPassword, new { @class = "form-control m-2", @placeholder = "PassWord", @type = "password", @id = "pds" })

             
            }
        </div>
    </div>
    <div class="container text-bg-danger">
        @Html.ValidationSummary(false)
    </div>
  
</body>
</html>
